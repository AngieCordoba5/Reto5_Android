<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E4FFE0"
    android:gravity="center"
    android:id="@+id/linearLayoutMaps"
    android:orientation="vertical">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/map"
        tools:context=".ui.FormMapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textTitulo_suc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/princesssofiaregular"
            android:text="Sucursales"
            android:textAlignment="center"
            android:textSize="22dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagen_item_suc"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:src="@drawable/home1" />

            <Button
                android:id="@+id/buttonBuscar_suc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Buscar" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editCampo1_suc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Campo1"
                android:inputType="textPersonName"
                android:text="" />

            <EditText
                android:id="@+id/editCampo2_suc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Campo2"
                android:inputType="textPersonName"
                android:text="" />

            <TextView
                android:id="@+id/editCampo3_suc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Campo3"
                android:inputType="number"
                android:textAlignment="center"
                android:text="" />

            <Button
                android:id="@+id/buttonIntertar_suc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Insertar" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2_suc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Consulta por ID:" />

            <EditText
                android:id="@+id/editIdItem_suc"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:hint="ID"
                android:inputType="textPersonName"
                android:text="" />

            <Button
                android:id="@+id/buttonConsultar_suc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Consultar" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonEliminar_suc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="Eliminar" />

            <Button
                android:id="@+id/buttonActualizar_suc"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="Actualizar" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

